[Unit]
Description=KootNet Ethernet Testers - iPerf3 Server Service
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
WorkingDirectory=/opt/kootnet-network-testers
RestartSec=5s
User=root
Group=root
ExecStart=/usr/bin/iperf3 -s -p 9000

[Install]
WantedBy=multi-user.target
