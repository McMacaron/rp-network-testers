[Unit]
Description=KootNet Ethernet Testers - Display & Network Commands Service
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
WorkingDirectory=/opt/kootnet-network-testers
RestartSec=5s
User=root
Group=root
ExecStart=/usr/bin/python3 /opt/kootnet-network-testers/display_server.py

[Install]
WantedBy=multi-user.target
